{
    "extends": [
        "standard",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    },
    "env": {
        "browser": true
    },
    "rules": {
        "semi": ["error", "never"],
        "indent": ["error", 4],
        "comma-dangle": ["error", "only-multiline"],
        "react/prop-types": 0,
        "no-multiple-empty-lines": ["error", {"max": 2}],
        "quotes": "off",
        "space-before-function-paren": ["error", {
            "anonymous": "always",
            "named": "never",
            "asyncArrow": "ignore"
        }],
        "eol-last": ["error", "always"],
        "padded-blocks": "off"
    }
}
